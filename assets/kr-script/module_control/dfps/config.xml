<?xml version="1.0" encoding="UTF-8" ?>
<resource dir="file:///android_asset/kr-script/module_control/dfps" />
<group>
	<action shell="hidden">
		<title>全局默认刷新率</title>
		<desc>调整全局默认刷新率</desc>
		<param
			name="Default_FPS"
			title="值为'-1'表示使用系统默认的刷新率切换规则。"
			desc=""
			type="seekbar"
			min="-1"
			max="144"
			value-sh="cat $dfps_path/dfps_cur.txt"/>
		<set>
			echo -e "$Default_FPS" > $dfps_path/dfps_cur.txt
		</set>
		<summary sh="cat $dfps_path/dfps_cur.txt" />
	</action>
</group>
<group>
	<action shell="hidden">
		<title>touchSlackMs</title>
		<desc>操作时屏幕刷新率切换到`活动刷新率`，操作松开后等待`touchSlackMs`毫秒后切换到`空闲刷新率`。</desc>
		<param
			name="touchSlackMs"
			title="此延迟用于避免频繁切换屏幕刷新率，以减少切换开销额外引入的功耗。"
			desc="默认值`4000`，最小值`100`。"
			type="seekbar"
			min="100"
			max="10000"
			value-sh="grep '/touchSlackMs' $dfps_path/dfps.txt | awk '{print $2}'"/>
		<set>
              sed -i "s|/touchSlackMs.*|/touchSlackMs ${touchSlackMs}|" $dfps_path/dfps.txt
		</set>
		<summary sh="grep '/touchSlackMs' $dfps_path/dfps.txt | awk '{print $2}'" />
	</action>
	<action shell="hidden">
		<title>enableMinBrightness</title>
		<desc>OLED屏幕在低亮度下切换刷新率，可能有可察觉的亮度和色彩变化，造成观感不佳。</desc>
		<param
			name="enableMinBrightness"
			title="此最低亮度用于指定启用动态刷新率的最低亮度，亮度值低于`enableMinBrightness`始终使用`活动刷新率`。"
			desc="默认值`8`，最大值`255`。"
			type="seekbar"
			min="8"
			max="255"
			value-sh="grep '/enableMinBrightness' $dfps_path/dfps.txt | awk '{print $2}'"/>
		<set>
              sed -i "s|/enableMinBrightness.*|/enableMinBrightness ${enableMinBrightness}|" $dfps_path/dfps.txt
		</set>
		<summary sh="grep '/enableMinBrightness' $dfps_path/dfps.txt | awk '{print $2}'" />
	</action>
	<action shell="hidden">
		<title>useSfBackdoor</title>
		<desc>dfps支持2种刷新率切换方法，以适配更多设备。</desc>
		<param name="useSfBackdoor" value-sh="sh ./kr-script/module_control/dfps/useSfBackdoor.sh" required="true" title="`useSfBackdoor`为0使用`PEAK_REFRESH_RATE`法，`useSfBackdoor`为1使用`Surfaceflinger backdoor`法。"
		desc="默认`PEAK_REFRESH_RATE`，可选。" >
			<option value="0">PEAK_REFRESH_RATE</option>
			<option value="1">Surfaceflinger backdoor</option>
		</param>
		<set>
              sed -i "s|/useSfBackdoor.*|/useSfBackdoor ${useSfBackdoor}|" $dfps_path/dfps.txt
		</set>
		<summary sh="sh ./kr-script/module_control/dfps/useSfBackdoor.sh" />
	</action>
</group>
<group id="app_list">
        <action reload="app_list" shell="hidden">
            <title>动态刷新率应用</title>
            <desc>配置动态刷新率(应用)名单</desc>
            <param name="apps" type="app" title="请选择你想要配置动态刷新率的应用，选择后使用下一个功能进行配置。" desc="点击确定后其它应用的配置可能会被清除，需要重新配置" multiple="multiple" value-sh="grep -Eo '[a-zA-Z0-9]+\.[a-zA-Z0-9]+(\.[a-zA-Z0-9]+)*' $dfps_path/dfps.txt" />
            <set>run apps.sh</set>
		<summary sh="grep -Eo '[a-zA-Z0-9]+\.[a-zA-Z0-9]+(\.[a-zA-Z0-9]+)*' $dfps_path/dfps.txt" />
        </action>
        <action reload="app_list" shell="hidden">
            <title>设置应用规则</title>
            <desc>先使用上面的功能添加包名，然后再进行设置</desc>
            <params>
                <param name="app_package_name" title="选择应用包名"
                    options-sh="grep -Eo '[a-zA-Z0-9]+\.[a-zA-Z0-9]+(\.[a-zA-Z0-9]+)*' $dfps_path/dfps.txt" />
            <param
                name="target_fps"
                title="请输入你要设定的值，注意useSfBackdoor方法。"
                desc="配置格式：空闲值 活动值">
            </param>
            </params>
            <set>run set_rules.sh</set>
        <summary sh="grep -E '[a-zA-Z0-9]+\.[a-zA-Z0-9]+(\.[a-zA-Z0-9]+)*' $dfps_path/dfps.txt" />
        </action>
</group>
<group>
        <action shell="hidden">
            <title>息屏规则</title>
            <desc>熄屏和默认规则必须指定。&#13;&#10;值为'-1'表示使用系统默认的刷新率切换规则。</desc>
            <param name="off_screen_rule" title="请输入你要设定的值，注意useSfBackdoor方法。" desc="配置格式：空闲值 活动值。" value-sh="sh ./kr-script/module_control/dfps/read_off_screen_rule.sh" />
            <set>run off_screen_rule.sh</set>
		<summary sh="sh ./kr-script/module_control/dfps/read_off_screen_rule.sh" />
        </action>
        <action shell="hidden">
            <title>默认规则</title>
            <desc>熄屏和默认规则必须指定。&#13;&#10;值为'-1'表示使用系统默认的刷新率切换规则。</desc>
            <param name="default_rule" title="请输入你要设定的值，注意useSfBackdoor方法。" desc="配置格式：空闲值 活动值。" value-sh="sh ./kr-script/module_control/dfps/read_default_rule.sh" />
            <set>run default_rule.sh</set>
		<summary sh="sh ./kr-script/module_control/dfps/read_default_rule.sh" />
        </action>
</group>
<group>
        <page
            config="settings.xml"
            title="其他设置">
        </page>
</group>